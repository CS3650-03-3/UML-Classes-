
/*
Bill
-used for displaying a monthly bill for a specific address. all attributes derived from other classes

 */
public class Bill {
        int billID //unique bill id generated for each bill
        int monthlyUsage //obtained from usage class and displayed as part of bill
        int rate //obtained from usage class and displayed
        int amountDue //obtained from usage class and displayed
        String dueDate //obtained from usage class and displayed
        int penaltyAmount //obtained from usage class and displayed
        String address //obtained from address and displayed


    public static main (String[] args)
    {
        //generated unique bill id when created
    }



}
